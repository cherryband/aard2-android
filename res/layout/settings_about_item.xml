<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="6dip"
    android:clickable="false"
    >

    <TextView
        android:id="@+id/application_version"
        android:text="@string/application_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="14dip"
        android:layout_marginLeft="14dip"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="14dip"
        android:layout_marginLeft="14dip"
        >

        <ImageView
            android:id="@+id/setting_about_copyright_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:layout_marginEnd="4dp"
            />

        <TextView
            android:id="@+id/application_copyright"
            android:text="@string/application_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="14dip"
        android:layout_marginLeft="14dip"
        >
        <ImageView
            android:id="@+id/setting_about_license_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:layout_marginEnd="4dp"
            />
        <TextView
            android:id="@+id/application_license"
            android:text="@string/application_license_name"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="14dip"
        android:layout_marginLeft="14dip"
        >

        <ImageView
            android:id="@+id/setting_about_source_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:layout_marginEnd="4dp"
            />

        <TextView
            android:text="@string/application_home_url"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
